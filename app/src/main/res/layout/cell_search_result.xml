<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:src="@drawable/ph_cover"
        android:paddingLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/thumbnailImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnailImageView"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:id="@+id/stateLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/stateLabel"
        android:paddingRight="4dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="16dp"
        android:id="@+id/dateLabel" />

    <TextView
        android:text="Akame ga Kill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/stateLabel"
        android:layout_below="@id/stateLabel"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:maxLines="2"
        android:textSize="26dp"
        android:id="@+id/titleLabel" />

    <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/stateLabel"
        android:layout_below="@id/titleLabel"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:gravity="bottom"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:textSize="16dp"
        android:id="@+id/descriptionLabel"/>

</RelativeLayout>